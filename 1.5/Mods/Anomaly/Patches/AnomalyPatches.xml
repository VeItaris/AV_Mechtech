<Patch>

	<!-- Mech recipes -->
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="MechGestator"]/recipes</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="MechGestator"]/recipes</xpath>
			<order>Prepend</order>
			<value>
				<li>AV_Gestate_Reshaper</li>
			</value>
		</match>
	</Operation>

 	<Operation Class="PatchOperationConditional">
