		<cooldownTicksRange>30000~30000</cooldownTicksRange>
		<statBases>
			<Ability_Duration>500</Ability_Duration>	<!-- why the hell is this seconds and not ticks...   = 1day = 60k = 1k seconds --> 
			<Ability_EffectRadius>9.9</Ability_EffectRadius>
		</statBases>
